<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core">
    <Dialog id="itemDialog" title="ITEM LIST">
									    
		    <t:Table rows="{orderitem>/PurchaseOrderItem}" id="docList2" class="sapUiResponsiveMargin" selectionMode="None"
				paste="onPaste" ariaLabelledBy="title">
            <t:columns >

                <t:Column >
                    <Label text="거래처코드" class="bold" />
                    <t:template>
                        <Text text="{orderitem>bpcode}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column >
                    <Label text="거래처명" class="bold" />
                    <t:template>
                        <Text text="{orderitem>cname}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column >
                    <Label text="구매오더번호" class="bold" />
                    <t:template>
                        <Text text="{orderitem>aufnr}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column >
                    <Label text="구매요청번호" class="bold" />
                    <t:template>
                        <Text text="{orderitem>banfn}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column >
                    <Label text="생산계획번호" class="bold" />
                    <t:template>
                        <Text text="{orderitem>plordco}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column >
                    <Label text="자재코드" class="bold" />
                    <t:template>
                        <Text text="{orderitem>matnr}" wrapping="false" />
                    </t:template>
                </t:Column>

                 <t:Column width="15rem">
                    <Label text="자재명" class="bold" />
                    <t:template>
                        <Text text="{orderitem>maktx}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column >
                    <Label text="수량" class="bold" />
                    <t:template>
                        <Text text="{orderitem>menge}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column >
                    <Label text="단위" class="bold" />
                    <t:template>
                        <Text text="{orderitem>meins}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column >
                    <Label text="단가" class="bold" />
                    <t:template>
                        <Text text="{orderitem>netwr}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column >
                    <Label text="통화" class="bold" />
                    <t:template>
                        <Text text="{orderitem>waers}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="10rem">
                    <Label text="입고예정일" class="bold" />
                    <t:template>
                        <Text text="{                                         
                                path: 'orderitem>eindt_string',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                style: 'long',
                                source: {
                                pattern: 'yyyy/MM/dd'
                                        }
                                    }
                                }" />
                    </t:template>
                </t:Column>

                <t:Column width="10rem">
                    <Label text="입고완료일" class="bold" />
                    <t:template>
                        <Text text="{                                         
                                path: 'orderitem>lfdat_string',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                style: 'long',
                                source: {
                                pattern: 'yyyy/MM/dd'
                                        }
                                    }
                                }" />
                    </t:template>
                </t:Column>

            </t:columns>
        </t:Table>
        
        <beginButton>
            <Button text="닫기" press="onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>